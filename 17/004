                { it: 'Grazie', ar: 'شكراً', phonetic: '/ˈɡrattsje/', type: 'تعبير', example: { it: 'Grazie mille!', ar: 'شكراً جزيلاً!' } },
                { it: 'Prego', ar: 'عفواً', phonetic: '/ˈprɛɡo/', type: 'تعبير', example: { it: 'Prego, si accomodi.', ar: 'عفواً، تفضل.' } },
                { it: 'Arrivederci', ar: 'إلى اللقاء', phonetic: '/arriˈvedertʃi/', type: 'تحية', example: { it: 'Arrivederci a domani!', ar: 'إلى اللقاء غداً!' } }
            ]},
            numbers: { name: 'الأرقام', icon: 'hashtag', words: [
                { it: 'Uno', ar: 'واحد', phonetic: '/ˈuno/', type: 'رقم', example: { it: 'Numero uno.', ar: 'رقم واحد.' } },
