                { it: 'Tre', ar: 'ثلاثة', phonetic: '/tre/', type: 'رقم', example: { it: 'Tre giorni.', ar: 'ثلاثة أيام.' } }
            ]}
        };
    }
    if (type === 'phrases' && level === 'a1') {
        return [{ id: 'basic', title: 'عبارات أساسية', icon: 'comment', phrases: [
            { it: 'Come stai?', ar: 'كيف حالك؟', phonetic: '/ˈkome stai/' },
            { it: 'Sto bene, grazie.', ar: 'أنا بخير، شكراً.', phonetic: '/sto ˈbɛne/' }
        ]}];
    }
    if (type === 'conversations' && level === 'a1') {
        return [{ id: 'greeting', title: 'التحية والتعارف', icon: 'handshake', dialogue: [
            { speaker: 'A', name: 'ماركو', it: 'Ciao! Come ti chiami?', ar: 'مرحباً! ما اسمك؟' },
            { speaker: 'B', name: 'سارة', it: 'Mi chiamo Sara. E tu?', ar: 'اسمي سارة. وأنت؟' },
            { speaker: 'A', name: 'ماركو', it: 'Mi chiamo Marco. Piacere!', ar: 'اسمي ماركو. تشرفت!' },
            { speaker: 'B', name: 'سارة', it: 'Piacere mio! Di dove sei?', ar: 'أنا سعيدة! من أين أنت؟' }
        ]}];
    }
    if (type === 'grammar' && level === 'a1') {
        return [{ id: 'essere', title: 'فعل Essere', icon: 'book', subtitle: 'فعل يكون',
            content: { explanation: 'فعل Essere يعني "يكون" وهو من أهم الأفعال.',
                table: [{ pronoun: 'Io', conjugation: 'sono', meaning: 'أنا أكون' }, { pronoun: 'Tu', conjugation: 'sei', meaning: 'أنت تكون' }],
                examples: [{ it: 'Io sono italiano.', ar: 'أنا إيطالي.' }]
            }
        }];
    }
    return type === 'words' ? {} : [];
}

// ==================== Init ====================
async function initApp() {
    loadState();
    if (appState.darkMode) document.body.classList.add('dark-mode');
    updateLevelTabsUI(appState.currentLevel);
    setTimeout(initSpeechRecognition, 100);
    
    // بدء تتبع الجلسة
    initStudyTracking();
    
    await loadConfig();
    updateAppInfo();
    await loadCurrentLevelData();
    setTimeout(() => loadAllLevelsData('words'), 500);
    
    $('loadingOverlay')?.classList.add('hide');
    
    initWordOfDay();
    initNotifications();
    requestAnimationFrame(() => {
        checkAchievements();
        updateUI();
        renderWeeklyChart();
        updateLevelProgressIndicators();
    });
}

// ==================== Study Session Tracking ====================
function initStudyTracking() {
    appState.sessionStartTime = Date.now();
    appState.currentSession = {
        startTime: Date.now(),
        wordsStudied: 0,
        xpEarned: 0
    };
}

function endStudySession() {
    if (appState.currentSession && appState.sessionStartTime) {
        const duration = Date.now() - appState.sessionStartTime;
        
        // حفظ فقط إذا كانت الجلسة أكثر من دقيقة
        if (duration > 60000) {
            const session = {
                date: new Date().toISOString(),
                duration: duration,
                wordsStudied: appState.currentSession.wordsStudied || 0,
                xpEarned: appState.currentSession.xpEarned || 0
            };
            
            if (!appState.studySessions) appState.studySessions = [];
            appState.studySessions.push(session);
            
            // الاحتفاظ بآخر 30 جلسة فقط
            if (appState.studySessions.length > 30) {
                appState.studySessions = appState.studySessions.slice(-30);
            }
            
            saveState();
        }
    }
}

function loadState() {
    try {
        const saved = localStorage.getItem(CONFIG.STATE_KEY);
        if (saved) appState = { ...appState, ...JSON.parse(saved) };
    } catch (e) {}
    checkStreak();
}

const saveState = debounce(() => {
    try { localStorage.setItem(CONFIG.STATE_KEY, JSON.stringify(appState)); } catch (e) {}
}, 300);

function updateAppInfo() {
    if (APP_CONFIG.app?.name) {
        const title = $('appTitle');
        if (title) title.textContent = APP_CONFIG.app.name;
    }
    renderSocialLinks();
}

function renderSocialLinks() {
    const container = $('socialLinks');
    if (!container) return;
    let html = '';
    if (APP_CONFIG.social?.facebook) html += `<a href="${APP_CONFIG.social.facebook}" target="_blank" class="social-link facebook"><i class="fab fa-facebook-f"></i></a>`;
    if (APP_CONFIG.social?.instagram) html += `<a href="${APP_CONFIG.social.instagram}" target="_blank" class="social-link instagram"><i class="fab fa-instagram"></i></a>`;
    if (APP_CONFIG.social?.tiktok) html += `<a href="${APP_CONFIG.social.tiktok}" target="_blank" class="social-link tiktok"><i class="fab fa-tiktok"></i></a>`;
    container.innerHTML = html || '<p style="color: var(--text-secondary); font-size: 12px;">لا توجد روابط</p>';
}

// ==================== Info Pages ====================
function openInfoPage(type) {
    closeModal();
    const pageData = APP_CONFIG[type];
    if (!pageData) return;
    
    $('infoPageTitle').textContent = pageData.title || type;
    const icons = { about: 'info-circle', contact: 'envelope', privacy: 'shield-alt', terms: 'file-contract' };
    
    let content = `<div class="info-page-icon"><i class="fas fa-${icons[type] || 'info'}"></i></div>`;
    content += `<div class="info-page-title">${pageData.title || ''}</div>`;
    
    if (type === 'contact') {
        content += `<div class="info-page-text">${pageData.content || ''}</div>`;
        if (pageData.email) {
            content += `<div class="contact-item" style="margin-top: 20px;"><div class="contact-item-icon"><i class="fas fa-envelope"></i></div><div class="contact-item-text"><div class="contact-item-label">البريد الإلكتروني</div><div class="contact-item-value">${pageData.email}</div></div></div>`;
        }
    } else {
        content += `<div class="info-page-text">${pageData.content || ''}</div>`;
    }
    
    $('infoPageContent').innerHTML = content;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('infoPage').classList.add('active');
}

function closeInfoPage() {
    openSettings();
    $$('.page').forEach(p => p.classList.remove('active'));
    $('homePage').classList.add('active');
}

// ==================== Level Selection ====================
function updateLevelTabsUI(level) {
    $$('.level-tab').forEach(tab => tab.classList.toggle('active', tab.dataset.level === level));
    $$('.current-level-text').forEach(el => el.textContent = level.toUpperCase());
    const display = $('currentLevelDisplay');
    if (display) display.textContent = level.toUpperCase();
    const bar = $('levelProgressBar');
    if (bar) bar.className = `progress-bar-fill ${level}`;
}

async function selectLevel(level) {
    if (appState.currentLevel === level) return;
    appState.currentLevel = level;
    saveState();
    updateLevelTabsUI(level);
    dictionaryFilterLevel = null;
    await loadCurrentLevelData();
    showToast(`تم التبديل للمستوى ${level.toUpperCase()}`, 'success');
}

function updateLevelProgressIndicators() {
    ['a1', 'a2', 'b1', 'b2'].forEach(level => {
        const el = $(`levelProgress${level.toUpperCase()}`);
        if (el) el.style.width = `${calculateLevelProgress(level)}%`;
    });
}

// ==================== Speech Recognition ====================
function initSpeechRecognition() {
    if ('webkitSpeechRecognition' in window || 'SpeechRecognition' in window) {
        const SR = window.SpeechRecognition || window.webkitSpeechRecognition;
        recognition = new SR();
        recognition.lang = 'it-IT';
        recognition.continuous = false;
        recognition.interimResults = false;
        recognition.onresult = e => handleVoiceResult(e.results[0][0].transcript.toLowerCase());
        recognition.onerror = () => { stopListening(); showToast('خطأ في التعرف على الصوت', 'error'); };
        recognition.onend = () => stopListening();
    }
}

function toggleVoiceInput() {
    if (!recognition) { showToast('متصفحك لا يدعم التعرف على الصوت', 'warning'); return; }
    isListening ? stopListening() : startListening();
}

function startListening() {
    if (!recognition) return;
    isListening = true;
    const btn = $('voiceInputBtn');
    if (btn) { btn.classList.add('listening'); btn.innerHTML = '<i class="fas fa-stop"></i>'; }
    $('voiceResult').style.display = 'none';
    try { recognition.start(); } catch (e) { stopListening(); }
}

function stopListening() {
    isListening = false;
    const btn = $('voiceInputBtn');
    if (btn) { btn.classList.remove('listening'); btn.innerHTML = '<i class="fas fa-microphone"></i>'; }
    try { recognition?.stop(); } catch (e) {}
}

function handleVoiceResult(result) {
    const q = quizQuestions[currentQuizIndex];
    if (!q) return;
    const voiceDiv = $('voiceResult');
    voiceDiv.style.display = 'block';
    const correct = q.correct.toLowerCase().trim();
    const user = result.trim();
    const isCorrect = user === correct || user.includes(correct) || correct.includes(user) || calculateSimilarity(user, correct) > 0.7;
    if (isCorrect) {
        voiceDiv.innerHTML = `<span style="color: var(--success);">✓ صحيح! "${result}"</span>`;
        quizScore++; appState.totalCorrectAnswers++; addXP(10);
    } else {
        voiceDiv.innerHTML = `<span style="color: var(--danger);">✗ قلت: "${result}"<br>الصحيح: "${q.correct}"</span>`;
    }
    appState.totalQuizQuestions++;
    $('quizNextBtn').style.display = 'block';
}

function calculateSimilarity(s1, s2) {
    const longer = s1.length > s2.length ? s1 : s2;
    const shorter = s1.length > s2.length ? s2 : s1;
    if (longer.length === 0) return 1.0;
    const costs = [];
    for (let i = 0; i <= longer.length; i++) {
        let lastVal = i;
        for (let j = 0; j <= shorter.length; j++) {
            if (i === 0) costs[j] = j;
            else if (j > 0) {
                let newVal = costs[j - 1];
                if (longer[i - 1] !== shorter[j - 1]) newVal = Math.min(newVal, lastVal, costs[j]) + 1;
                costs[j - 1] = lastVal;
                lastVal = newVal;
            }
        }
        if (i > 0) costs[shorter.length] = lastVal;
    }
    return (longer.length - costs[shorter.length]) / longer.length;
}

// ==================== Notifications ====================
function initNotifications() {
    if (!appState.notifications.length) {
        addNotification('reminder', 'مرحباً بك في سهل إيطالي! 📚', 'ابدأ رحلة التعلم', Date.now());
    }
    updateNotificationsBadge();
}

function addNotification(type, text, desc, timestamp) {
    appState.notifications.unshift({ id: Date.now(), type, text, desc, time: timestamp, read: false });
    if (appState.notifications.length > 20) appState.notifications = appState.notifications.slice(0, 20);
    saveState();
    updateNotificationsBadge();
}

function toggleNotificationsPanel() {
    const dropdown = $('notificationsDropdown');
    dropdown.classList.toggle('show');
    if (dropdown.classList.contains('show')) renderNotifications();
}

function closeNotifications(e) {
    if (e.target.id === 'notificationsDropdown') $('notificationsDropdown').classList.remove('show');
}

function renderNotifications() {
    const list = $('notificationsList');
    if (!appState.notifications.length) {
        list.innerHTML = '<div class="notification-empty"><i class="fas fa-bell-slash"></i><p>لا توجد إشعارات</p></div>';
        return;
    }
    const icons = { achievement: '🏆', streak: '🔥', xp: '⭐', reminder: '⏰', level: '🎉' };
    list.innerHTML = appState.notifications.map(n => `
        <div class="notification-item ${n.read ? '' : 'unread'}" onclick="markNotificationRead(${n.id})">
            <div class="notification-icon ${n.type}">${icons[n.type] || '📢'}</div>
            <div class="notification-content">
                <div class="notification-text">${n.text}</div>
                <div class="notification-desc">${n.desc}</div>
                <div class="notification-time">${getTimeAgo(n.time)}</div>
            </div>
        </div>
    `).join('');
}

function getTimeAgo(ts) {
    const s = Math.floor((Date.now() - ts) / 1000);
    if (s < 60) return 'الآن';
    if (s < 3600) return `منذ ${Math.floor(s / 60)} دقيقة`;
    if (s < 86400) return `منذ ${Math.floor(s / 3600)} ساعة`;
    return `منذ ${Math.floor(s / 86400)} يوم`;
}

function markNotificationRead(id) {
    const n = appState.notifications.find(x => x.id === id);
    if (n) { n.read = true; saveState(); updateNotificationsBadge(); renderNotifications(); }
}

function clearAllNotifications() {
    appState.notifications = [];
    saveState();
    updateNotificationsBadge();
    renderNotifications();
    showToast('تم مسح الإشعارات', 'success');
}

function updateNotificationsBadge() {
    const badge = $('notificationsBadge');
    const count = appState.notifications.filter(n => !n.read).length;
    if (badge) { badge.textContent = count > 9 ? '9+' : count; badge.style.display = count > 0 ? 'flex' : 'none'; }
}

// ==================== Word of Day ====================
function initWordOfDay() {
    const today = new Date().toDateString();
    if (appState.wordOfDayDate !== today) {
        generateWordOfDay();
        appState.wordOfDayDate = today;
        appState.wodCollapsed = false;
        saveState();
    }
    displayWordOfDay();
    if (appState.wodCollapsed) {
        $('wordOfDay')?.classList.add('collapsed');
        $('wodToggleIcon')?.classList.replace('fa-chevron-up', 'fa-chevron-down');
    }
}

function generateWordOfDay() {
    const allWords = getAllWordsFlat();
    if (!allWords.length) {
        appState.wordOfDay = { it: 'Ciao', ar: 'مرحباً', phonetic: '/ˈtʃaːo/', type: 'تحية', example: { it: 'Ciao!', ar: 'مرحباً!' } };
        return;
    }
    const dayOfYear = Math.floor((new Date() - new Date(new Date().getFullYear(), 0, 0)) / 86400000);
    appState.wordOfDay = allWords[dayOfYear % allWords.length];
}

function getAllWordsFlat() {
    const words = [];
    Object.keys(DATABASE.words).forEach(level => {
        Object.entries(DATABASE.words[level]).forEach(([catId, cat]) => {
            cat.words?.forEach(w => words.push({ ...w, level, category: cat.name, categoryId: catId }));
        });
    });
    return words;
}

function getCurrentLevelWords() {
    const words = [];
    const data = DATABASE.words[appState.currentLevel] || {};
    Object.entries(data).forEach(([catId, cat]) => {
        cat.words?.forEach(w => words.push({ ...w, level: appState.currentLevel, category: cat.name, categoryId: catId }));
    });
    return words;
}

function displayWordOfDay() {
    const w = appState.wordOfDay;
    if (!w) return;
    const set = (id, val) => { const el = $(id); if (el) el.textContent = val; };
    set('wodItalian', w.it);
    set('wodArabic', w.ar);
    set('wodPhonetic', w.phonetic || '');
    set('wodType', w.type || 'كلمة');
    set('wodCollapsedWord', w.it);
    set('wodCollapsedMeaning', w.ar);
    if (w.example) { set('wodExampleIt', w.example.it); set('wodExampleAr', w.example.ar); }
    set('wodDate', new Date().toLocaleDateString('ar', { weekday: 'long', day: 'numeric', month: 'long' }));
    updateWodLikeBtn();
}

function toggleWordOfDay(e) {
    e?.stopPropagation();
    const wod = $('wordOfDay');
    const icon = $('wodToggleIcon');
    wod.classList.toggle('collapsed');
    appState.wodCollapsed = wod.classList.contains('collapsed');
    icon.classList.toggle('fa-chevron-up', !appState.wodCollapsed);
    icon.classList.toggle('fa-chevron-down', appState.wodCollapsed);
    saveState();
}

function speakWordOfDay(e) { e?.stopPropagation(); if (appState.wordOfDay) speak(appState.wordOfDay.it); }

function toggleLikeWordOfDay(e) {
    e?.stopPropagation();
    if (appState.wordOfDay) { toggleLikeWord(appState.wordOfDay); updateWodLikeBtn(); }
}

function updateWodLikeBtn() {
    const w = appState.wordOfDay;
    const btn = $('wodLikeBtn');
    if (!w || !btn) return;
    const liked = appState.likedWords.some(x => x.it === w.it);
    btn.innerHTML = `<i class="${liked ? 'fas' : 'far'} fa-heart"></i>`;
    btn.classList.toggle('liked', liked);
}

// ==================== Like System ====================
function toggleLikeWord(word) {
    const idx = appState.likedWords.findIndex(w => w.it === word.it);
    if (idx === -1) {
        appState.likedWords.push({ ...word });
        showToast('❤️ تمت الإضافة للمفضلة', 'success');
    } else {
        appState.likedWords.splice(idx, 1);
        showToast('تمت الإزالة من المفضلة', 'info');
    }
    checkAchievements();
    saveState();
}

const isWordLiked = word => appState.likedWords.some(w => w.it === word.it);
const escapeQuotes = str => str ? str.replace(/'/g, "\\'").replace(/"/g, '\\"') : '';

// ==================== Dictionary ====================
function renderDictionary() {
    const level = dictionaryFilterLevel || appState.currentLevel;
    
    if (cachedDictionaryHTML[level] && lastDictionaryLevel === level) {
        $('dictionaryContent').innerHTML = cachedDictionaryHTML[level];
        updateDictionaryStats();
        highlightDictionaryFilter();
        return;
    }
    
    const levelData = DATABASE.words[level] || {};
    const categories = Object.keys(levelData);
    
    updateDictionaryStats();
    highlightDictionaryFilter();
    
    const container = $('dictionaryContent');
    if (!container) return;
    
    if (!categories.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-book-open"></i><p>لا توجد كلمات</p></div>';
        return;
    }
    
    const gradients = {
        a1: 'linear-gradient(135deg, #22C55E, #4ADE80)',
        a2: 'linear-gradient(135deg, #3B82F6, #60A5FA)',
        b1: 'linear-gradient(135deg, #F59E0B, #FBBF24)',
        b2: 'linear-gradient(135deg, #EF4444, #F87171)'
    };
    
    const html = categories.map(catId => {
        const cat = levelData[catId];
        const isOpen = appState.openCategories[`${level}_${catId}`] || false;
        const icon = getCategoryIcon(cat.icon, catId);
        
        const wordsHtml = (cat.words || []).map(word => {
            const liked = isWordLiked(word);
            return `<div class="word-list-item"><div class="word-list-level ${level}">${level.toUpperCase()}</div><div class="word-list-info"><div class="word-list-italian">${word.it}</div><div class="word-list-arabic">${word.ar}</div></div><div class="word-list-actions"><button class="word-list-btn speak" onclick="event.stopPropagation(); speak('${escapeQuotes(word.it)}')"><i class="fas fa-volume-up"></i></button><button class="word-list-btn like ${liked ? 'liked' : ''}" onclick="event.stopPropagation(); toggleLikeFromDict(this, '${escapeQuotes(word.it)}', '${catId}', '${level}')"><i class="${liked ? 'fas' : 'far'} fa-heart"></i></button></div></div>`;
        }).join('');
        
        return `<div class="dictionary-category ${isOpen ? 'open' : ''}" id="dict-cat-${level}-${catId}"><div class="dictionary-category-header" onclick="toggleDictionaryCategory('${catId}', '${level}')"><div class="dictionary-category-info"><div class="dictionary-category-icon" style="background: ${gradients[level]};"><i class="fas fa-${icon}"></i></div><div class="dictionary-category-text"><h3>${cat.name}</h3><span>${cat.words?.length || 0} كلمة</span></div></div><i class="fas fa-chevron-down dictionary-category-toggle"></i></div><div class="dictionary-category-content">${wordsHtml}</div></div>`;
    }).join('');
    
    container.innerHTML = html;
    cachedDictionaryHTML[level] = html;
    lastDictionaryLevel = level;
}

function updateDictionaryStats() {
    ['a1', 'a2', 'b1', 'b2'].forEach(level => {
        let count = 0;
        Object.values(DATABASE.words[level] || {}).forEach(cat => count += cat.words?.length || 0);
        const el = $(`dict${level.toUpperCase()}Count`);
        if (el) el.textContent = count;
    });
}

function highlightDictionaryFilter() {
    const active = dictionaryFilterLevel || appState.currentLevel;
    ['a1', 'a2', 'b1', 'b2'].forEach(level => {
        const el = $(`dictStat${level.toUpperCase()}`);
        if (el) el.classList.toggle('active', level === active);
    });
}

function filterDictionaryByLevel(level) {
    dictionaryFilterLevel = level;
    renderDictionary();
}

function toggleDictionaryCategory(catId, level) {
    const key = `${level}_${catId}`;
    appState.openCategories[key] = !appState.openCategories[key];
    saveState();
    $(`dict-cat-${level}-${catId}`)?.classList.toggle('open', appState.openCategories[key]);
}

function toggleLikeFromDict(btn, wordIt, catId, level) {
    const cat = DATABASE.words[level]?.[catId];
    const word = cat?.words?.find(w => w.it === wordIt);
    if (!word) return;
    toggleLikeWord({ ...word, level, category: cat.name });
    const liked = isWordLiked(word);
    btn.classList.toggle('liked', liked);
    btn.innerHTML = `<i class="${liked ? 'fas' : 'far'} fa-heart"></i>`;
    cachedDictionaryHTML = {};
}

const searchDictionary = debounce(() => {
    const query = $('dictionarySearch')?.value.trim().toLowerCase();
    const container = $('dictionaryContent');
    if (!query) { renderDictionary(); return; }
    
    const results = [];
    ['a1', 'a2', 'b1', 'b2'].forEach(level => {
        Object.entries(DATABASE.words[level] || {}).forEach(([catId, cat]) => {
            cat.words?.forEach(word => {
                if (word.it.toLowerCase().includes(query) || word.ar.includes(query)) {
                    results.push({ ...word, category: cat.name, catId, level });
                }
            });
        });
    });
    
    if (!results.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-search"></i><p>لا توجد نتائج</p></div>';
        return;
    }
    
    container.innerHTML = results.slice(0, 50).map(word => {
        const liked = isWordLiked(word);
        return `<div class="word-list-item"><div class="word-list-level ${word.level}">${word.level.toUpperCase()}</div><div class="word-list-info"><div class="word-list-italian">${word.it}</div><div class="word-list-arabic">${word.ar}</div><div class="word-list-category">${word.category}</div></div><div class="word-list-actions"><button class="word-list-btn speak" onclick="speak('${escapeQuotes(word.it)}')"><i class="fas fa-volume-up"></i></button><button class="word-list-btn like ${liked ? 'liked' : ''}" onclick="toggleLikeFromDict(this, '${escapeQuotes(word.it)}', '${word.catId}', '${word.level}')"><i class="${liked ? 'fas' : 'far'} fa-heart"></i></button></div></div>`;
    }).join('');
}, 250);

// ==================== Favorites ====================
function openFavorites() {
    $$('.page').forEach(p => p.classList.remove('active'));
    $('favoritesPage').classList.add('active');
    renderFavorites();
}

function renderFavorites() {
    const container = $('favoritesList');
    const countEl = $('favoritesCount');
    if (countEl) countEl.textContent = appState.likedWords.length;
    
    if (!appState.likedWords.length) {
        container.innerHTML = `<div class="favorites-empty"><i class="far fa-heart"></i><p>لا توجد كلمات في المفضلة</p><button class="word-control-btn primary" onclick="navigateTo('dictionary')" style="margin: 0 auto;"><i class="fas fa-plus"></i> أضف كلمات</button></div>`;
        return;
    }
    
    container.innerHTML = appState.likedWords.map((word, i) => `
        <div class="liked-word-item"><div class="liked-word-icon">❤️</div><div class="liked-word-info"><div class="liked-word-it">${word.it}</div><div class="liked-word-ar">${word.ar}</div>${word.level ? `<span class="liked-word-level ${word.level}">${word.level.toUpperCase()}</span>` : ''}</div><div class="liked-word-actions"><button class="liked-word-btn speak" onclick="speak('${escapeQuotes(word.it)}')"><i class="fas fa-volume-up"></i></button><button class="liked-word-btn delete" onclick="confirmDeleteLikedWord(${i})"><i class="fas fa-trash"></i></button></div></div>
    `).join('');
}

const searchFavorites = debounce(() => {
    const query = $('favoritesSearch')?.value.trim().toLowerCase();
    const container = $('favoritesList');
    const filtered = query ? appState.likedWords.filter(w => w.it.toLowerCase().includes(query) || w.ar.includes(query)) : appState.likedWords;
    
    if (!filtered.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-search"></i><p>لا توجد نتائج</p></div>';
        return;
    }
    
    container.innerHTML = filtered.map(word => {
        const idx = appState.likedWords.findIndex(w => w.it === word.it);
        return `<div class="liked-word-item"><div class="liked-word-icon">❤️</div><div class="liked-word-info"><div class="liked-word-it">${word.it}</div><div class="liked-word-ar">${word.ar}</div></div><div class="liked-word-actions"><button class="liked-word-btn speak" onclick="speak('${escapeQuotes(word.it)}')"><i class="fas fa-volume-up"></i></button><button class="liked-word-btn delete" onclick="confirmDeleteLikedWord(${idx})"><i class="fas fa-trash"></i></button></div></div>`;
    }).join('');
}, 250);

function studyFavorites() {
    if (!appState.likedWords.length) { showToast('لا توجد كلمات في المفضلة', 'warning'); return; }
    currentWords = [...appState.likedWords];
    currentWordIndex = 0;
    currentCategory = 'favorites';
    $('wordCategoryTitle').textContent = '❤️ المفضلة';
    $$('.page').forEach(p => p.classList.remove('active'));
    $('wordStudyPage').classList.add('active');
    displayCurrentWord();
}

function quizFavorites() {
    if (appState.likedWords.length < 4) { showToast('تحتاج 4 كلمات على الأقل', 'warning'); return; }
    quizType = 'favorites';
    quizQuestions = generateQuizFromWords(appState.likedWords);
    currentQuizIndex = 0;
    quizScore = 0;
    $('quizContainer').style.display = 'block';
    $('quizResult').style.display = 'none';
    $('quizTotalQ').textContent = quizQuestions.length;
    $('quizListeningBtn').style.display = 'none';
    $('quizVoiceInput').style.display = 'none';
    $$('.page').forEach(p => p.classList.remove('active'));
    $('quizPage').classList.add('active');
    displayQuizQuestion();
}

function generateQuizFromWords(words) {
    let questions = words.map(w => ({
        question: `ما معنى "<span class="italian-word">${w.it}</span>"؟`,
        correct: w.ar, allAnswers: words.map(x => x.ar), audio: w.it
    }));
    questions = questions.sort(() => Math.random() - 0.5).slice(0, 10);
    questions.forEach(q => {
        const wrong = q.allAnswers.filter(a => a !== q.correct).sort(() => Math.random() - 0.5).slice(0, 3);
        q.options = [q.correct, ...wrong].sort(() => Math.random() - 0.5);
    });
    return questions;
}

// ==================== Navigation ====================
function navigateTo(page) {
    $$('.nav-item').forEach(n => n.classList.remove('active'));
    document.querySelector(`.nav-item[data-page="${page}"]`)?.classList.add('active');
    $$('.page').forEach(p => p.classList.remove('active'));
    
    speechSynthesis.cancel();
    stopConversation();
    
    const actions = {
        home: () => $('homePage').classList.add('active'),
        dictionary: () => { 
            $('dictionaryPage').classList.add('active'); 
            if (lastDictionaryLevel !== (dictionaryFilterLevel || appState.currentLevel)) {
                dictionaryFilterLevel = null;
            }
            renderDictionary(); 
        },
        grammar: () => { $('grammarPage').classList.add('active'); renderGrammar(); },
        statistics: () => { $('statisticsPage').classList.add('active'); renderStatistics(); },
        profile: () => { $('profilePage').classList.add('active'); updateProfile(); }
    };
    actions[page]?.();
    $('mainContent')?.scrollTo(0, 0);
}

function goHome() { navigateTo('home'); }

function openSection(section) {
    $$('.page').forEach(p => p.classList.remove('active'));
    
    speechSynthesis.cancel();
    stopConversation();
    
    const actions = {
        words: () => { $('wordsPage').classList.add('active'); renderWordCategories(); },
        phrases: () => { $('phrasesPage').classList.add('active'); renderPhrases(); },
        conversations: () => { $('conversationsPage').classList.add('active'); renderConversations(); },
        grammar: () => { $('grammarPage').classList.add('active'); renderGrammar(); },
        quiz: () => $('quizTypePage').classList.add('active'),
        practice: () => $('practicePage').classList.add('active'),
        achievements: () => { $('achievementsPage').classList.add('active'); renderAchievements(); },
        statistics: () => { $('statisticsPage').classList.add('active'); renderStatistics(); }
    };
    actions[section]?.();
    $('mainContent')?.scrollTo(0, 0);
}

// ==================== Words ====================
function renderWordCategories() {
    const container = $('wordsCategoryList');
    const levelData = DATABASE.words[appState.currentLevel] || {};
    const categories = Object.keys(levelData);
    
    if (!categories.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-book-open"></i><p>لا توجد كلمات</p></div>';
        return;
    }
    
    container.innerHTML = categories.map(catId => {
        const cat = levelData[catId];
        const count = cat.words?.length || 0;
        const learned = Object.keys(appState.learnedWords[`${appState.currentLevel}_${catId}`] || {}).length;
        const progress = count > 0 ? Math.round((learned / count) * 100) : 0;
        const icon = getCategoryIcon(cat.icon, catId);
        
        return `<div class="category-item" onclick="openWordCategory('${catId}')"><div class="category-icon" style="background: linear-gradient(135deg, var(--a1-color), #4ADE80); color: white;"><i class="fas fa-${icon}"></i></div><div class="category-info"><div class="category-name">${cat.name}</div><div class="category-meta">${count} كلمة • ${learned} تعلمتها</div></div><div class="category-progress-value">${progress}%</div><i class="fas fa-chevron-left category-arrow"></i></div>`;
    }).join('');
}

function openWordCategory(catId) {
    const levelData = DATABASE.words[appState.currentLevel];
    if (!levelData?.[catId]) return;
    currentCategory = catId;
    currentWords = [...levelData[catId].words].map(w => ({ ...w, level: appState.currentLevel }));
    currentWordIndex = 0;
    $('wordCategoryTitle').textContent = levelData[catId].name;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('wordStudyPage').classList.add('active');
    displayCurrentWord();
}

function displayCurrentWord() {
    if (!currentWords.length) return;
    const word = currentWords[currentWordIndex];
    $('wordCard')?.classList.remove('flipped');
    $('wordItalian').textContent = word.it;
    $('wordArabic').textContent = word.ar;
    $('wordPhonetic').textContent = word.phonetic || '';
    $('wordTypeBadge').textContent = word.type || 'كلمة';
    
    const level = word.level || appState.currentLevel;
    const badge = $('wordLevelBadge');
    let badgeText = level.toUpperCase();
    
    if (word.isRepeat) badgeText += ' 🔄';
    else if (word.isNew) badgeText += ' ✨';
    else if (word.isReview) badgeText += ' 📖';
    
    badge.textContent = badgeText;
    badge.className = `word-level-badge ${level}`;
    
    const example = $('wordExample');
    example.innerHTML = word.example ? `<span class="italian-example">${word.example.it}</span><br><small>${word.example.ar}</small>` : '';
    $('wordProgress').textContent = `${currentWordIndex + 1}/${currentWords.length}`;
    
    updateRatingButtonsPreview(word);
}

function updateRatingButtonsPreview(word) {
    const level = word.level || appState.currentLevel;
    const key = `${level}_${currentCategory}`;
    const wordData = appState.learnedWords[key]?.[word.it];
    
    const intervals = calculateNextIntervals(wordData);
    
    const buttons = $$('.rating-btn');
    const times = [
        formatInterval(intervals.again),
        formatInterval(intervals.hard),
        formatInterval(intervals.good),
        formatInterval(intervals.easy)
    ];
    
    buttons.forEach((btn, i) => {
        const timeSpan = btn.querySelector('.interval-preview');
        if (timeSpan) timeSpan.textContent = times[i];
    });
}

function calculateNextIntervals(wordData) {
    const currentInterval = wordData?.interval || 0;
    const currentEase = wordData?.ease || 2.5;
    
    return {
        again: 0.001,
        hard: Math.max(0.01, currentInterval * 1.2),
        good: Math.max(1, currentInterval * currentEase),
        easy: Math.max(4, currentInterval * currentEase * 1.3)
    };
}

function formatInterval(days) {
    if (days < 0.007) return '< 10 د';
    if (days < 0.042) return '< 1 س';
    if (days < 1) return `${Math.round(days * 24)} س`;
    if (days === 1) return '1 يوم';
    if (days < 7) return `${Math.round(days)} أيام`;
    if (days < 30) return `${Math.round(days / 7)} أسبوع`;
    if (days < 365) return `${Math.round(days / 30)} شهر`;
    return `${Math.round(days / 365)} سنة`;
}

function flipCard(type) { $(type + 'Card')?.classList.toggle('flipped'); }

function handleNextWord() {
    if (currentWordIndex < currentWords.length - 1) { currentWordIndex++; displayCurrentWord(); }
    else showToast('🎉 انتهيت من هذه المجموعة!', 'success');
}

function handlePrevWord() {
    if (currentWordIndex > 0) { currentWordIndex--; displayCurrentWord(); }
}

function shuffleWords() {
    currentWords.sort(() => Math.random() - 0.5);
    currentWordIndex = 0;
    displayCurrentWord();
    showToast('🔀 تم الخلط', 'info');
}

function speakCurrentWord() { if (currentWords.length) speak(currentWords[currentWordIndex].it); }

// ==================== SRS Rating System ====================
function rateWord(rating) {
    if (!currentWords.length) return;
    const word = currentWords[currentWordIndex];
    const level = word.level || appState.currentLevel;
    const key = `${level}_${currentCategory}`;
    
    if (!appState.learnedWords[key]) appState.learnedWords[key] = {};
    
    let wordData = appState.learnedWords[key][word.it] || {
        ease: 2.5,
        interval: 0,
        repetitions: 0,
        nextReview: null,
        lastRating: null,
        totalReviews: 0,
        correctCount: 0,
        createdAt: new Date().toISOString()
    };
    
    const config = SRS_CONFIG[rating];
    
    if (rating === 'again') {
        wordData.interval = config.minInterval;
        wordData.repetitions = 0;
        wordData.ease = Math.max(1.3, wordData.ease + config.ease);
    } else {
        if (wordData.repetitions === 0) {
            wordData.interval = rating === 'easy' ? 4 : rating === 'good' ? 1 : 0.01;
        } else if (wordData.repetitions === 1) {
            wordData.interval = rating === 'easy' ? 8 : rating === 'good' ? 6 : 1;
        } else {
            wordData.interval = Math.round(wordData.interval * wordData.ease * config.interval);
        }
        
        wordData.ease = Math.max(1.3, wordData.ease + config.ease);
        wordData.repetitions++;
        
        if (rating === 'good' || rating === 'easy') {
            wordData.correctCount = (wordData.correctCount || 0) + 1;
        }
    }
    
    wordData.interval = Math.max(config.minInterval, wordData.interval);
    wordData.nextReview = new Date(Date.now() + wordData.interval * 24 * 60 * 60 * 1000).toISOString();
    wordData.lastRating = rating;
    wordData.lastReview = new Date().toISOString();
    wordData.totalReviews = (wordData.totalReviews || 0) + 1;
    
    appState.learnedWords[key][word.it] = wordData;
    
    // تتبع الجلسة
    if (appState.currentSession) {
        appState.currentSession.wordsStudied = (appState.currentSession.wordsStudied || 0) + 1;
    }
    
    const baseXP = { again: 1, hard: 3, good: 5, easy: 10 };
    let xpEarned = baseXP[rating];
    
    if (wordData.repetitions > 3 && (rating === 'good' || rating === 'easy')) {
        xpEarned += 2;
    }
    
    if (rating !== 'again' && wordData.correctCount >= 3) {
        xpEarned += 1;
    }
    
    addXP(xpEarned);
    
    const messages = {
        again: '🔄 ستراها مجدداً قريباً',
        hard: '💪 بحاجة لمزيد من التدريب',
        good: '👍 أحسنت! تتحسن',
        easy: '⭐ ممتاز! أتقنتها'
    };
    showToast(messages[rating], rating === 'easy' ? 'success' : 'info');
    
    if (rating === 'again' && currentWordIndex < currentWords.length - 1) {
        const insertPosition = Math.min(currentWordIndex + 3 + Math.floor(Math.random() * 3), currentWords.length);
        currentWords.splice(insertPosition, 0, { ...word, isRepeat: true });
    }
    
    if (currentWordIndex < currentWords.length - 1) {
        currentWordIndex++;
        displayCurrentWord();
    } else {
        showStudySessionComplete();
    }
    
    saveState();
}

function showStudySessionComplete() {
    const level = appState.currentLevel;
    const key = `${level}_${currentCategory}`;
    const categoryWords = appState.learnedWords[key] || {};
    
    let stats = { again: 0, hard: 0, good: 0, easy: 0, total: 0 };
    const today = new Date().toDateString();
    
    Object.values(categoryWords).forEach(w => {
        if (w.lastRating && w.lastReview) {
            const reviewDate = new Date(w.lastReview).toDateString();
            if (reviewDate === today) {
                stats[w.lastRating]++;
                stats.total++;
            }
        }
    });
    
    const accuracy = stats.total > 0 ? Math.round(((stats.good + stats.easy) / stats.total) * 100) : 0;
    
    showToast(`🎉 أكملت ${stats.total} كلمة! الدقة: ${accuracy}%`, 'success');
}

const searchWords = debounce(() => {
    const query = $('wordSearch')?.value.trim().toLowerCase();
    if (!query) { renderWordCategories(); return; }
    
    const results = [];
    const levelData = DATABASE.words[appState.currentLevel] || {};
    Object.values(levelData).forEach(cat => {
        cat.words?.forEach(word => {
            if (word.it.toLowerCase().includes(query) || word.ar.includes(query)) results.push(word);
        });
    });
    
    const container = $('wordsCategoryList');
    if (!results.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-search"></i><p>لا توجد نتائج</p></div>';
        return;
    }
    
    container.innerHTML = results.slice(0, 30).map(w => `<div class="category-item" onclick="speak('${escapeQuotes(w.it)}')"><div class="category-icon" style="background: var(--primary); color: white;"><i class="fas fa-font"></i></div><div class="category-info"><div class="category-name italian-text">${w.it}</div><div class="category-meta">${w.ar}</div></div><i class="fas fa-volume-up category-arrow"></i></div>`).join('');
}, 250);

// ==================== Phrases ====================
function renderPhrases() {
    const container = $('phrasesList');
    const phrases = DATABASE.phrases[appState.currentLevel] || [];
    
    if (!phrases.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-comment"></i><p>لا توجد عبارات</p></div>';
        return;
    }
    
    container.innerHTML = phrases.map(p => `<div class="category-item" onclick="openPhraseCategory('${p.id}')"><div class="category-icon" style="background: linear-gradient(135deg, var(--a2-color), #60A5FA); color: white;"><i class="fas fa-${getCategoryIcon(p.icon, p.id)}"></i></div><div class="category-info"><div class="category-name">${p.title}</div><div class="category-meta">${p.phrases?.length || 0} عبارة</div></div><i class="fas fa-chevron-left category-arrow"></i></div>`).join('');
}

function openPhraseCategory(categoryId) {
    const phrases = DATABASE.phrases[appState.currentLevel] || [];
    const category = phrases.find(p => p.id === categoryId);
    if (!category) return;
    
    $('phraseDetailTitle').textContent = category.title;
    $('phraseDetailContent').innerHTML = category.phrases.map(phrase => `<div class="phrase-card"><div class="phrase-card-header"><div><div class="phrase-italian">${phrase.it}</div><div class="phrase-arabic">${phrase.ar}</div><div class="phrase-phonetic">${phrase.phonetic || ''}</div></div><button class="phrase-speak-btn" onclick="speak('${escapeQuotes(phrase.it)}')"><i class="fas fa-volume-up"></i></button></div></div>`).join('');
    
    $$('.page').forEach(p => p.classList.remove('active'));
    $('phraseDetailPage').classList.add('active');
    addXP(2);
}

// ==================== Conversations ====================
function renderConversations() {
    const container = $('conversationsList');
    const convs = DATABASE.conversations[appState.currentLevel] || [];
    
    if (!convs.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-comments"></i><p>لا توجد محادثات</p></div>';
        return;
    }
    
    container.innerHTML = convs.map(c => `<div class="category-item" onclick="openConversation('${c.id}')"><div class="category-icon" style="background: linear-gradient(135deg, var(--b1-color), #FBBF24); color: white;"><i class="fas fa-${getCategoryIcon(c.icon, c.id)}"></i></div><div class="category-info"><div class="category-name">${c.title}</div><div class="category-meta">${c.dialogue?.length || 0} جملة</div></div><i class="fas fa-chevron-left category-arrow"></i></div>`).join('');
}

function openConversation(conversationId) {
    const convs = DATABASE.conversations[appState.currentLevel] || [];
    const conversation = convs.find(c => c.id === conversationId);
    if (!conversation) return;
    
    currentConversation = conversation;
    currentConversationLine = 0;
    $('conversationDetailTitle').textContent = conversation.title;
    
    renderConversationContent();
    
    $$('.page').forEach(p => p.classList.remove('active'));
    $('conversationDetailPage').classList.add('active');
    addXP(3);
}

function renderConversationContent() {
    if (!currentConversation) return;
    
    let html = '<div class="conversation-container">';
    currentConversation.dialogue.forEach((line, i) => {
        html += `
            <div class="conversation-bubble person-${line.speaker.toLowerCase()}" id="conv-line-${i}">
                <button class="conversation-speak-btn" onclick="speakConversationLine(${i})">
                    <i class="fas fa-volume-up"></i>
                </button>
                <div class="conversation-speaker">
                    <span class="conversation-speaker-avatar">${line.speaker}</span>
                    ${line.name}
                </div>
                <div class="conversation-text-it">${line.it}</div>
                <div class="conversation-text-ar">${line.ar}</div>
            </div>
        `;
    });
    html += '</div>';
    
    html += `
        <div class="conversation-controls">
            <div class="conversation-mode-tabs">
                <div class="conversation-mode-tab ${appState.conversationMode === 'listen' ? 'active' : ''}" onclick="setConversationMode('listen')">
                    <i class="fas fa-headphones"></i>
                    استماع
                </div>
                <div class="conversation-mode-tab ${appState.conversationMode === 'practice' ? 'active' : ''}" onclick="setConversationMode('practice')">
                    <i class="fas fa-microphone"></i>
                    تدريب
                </div>
            </div>
            
            <div class="conversation-speed-control">
                <span class="conversation-speed-label">السرعة:</span>
                <button class="conversation-speed-btn ${appState.conversationSpeed === 0.6 ? 'active' : ''}" onclick="setConversationSpeed(0.6)">🐢</button>
                <button class="conversation-speed-btn ${appState.conversationSpeed === 0.8 ? 'active' : ''}" onclick="setConversationSpeed(0.8)">🚶</button>
                <button class="conversation-speed-btn ${appState.conversationSpeed === 1 ? 'active' : ''}" onclick="setConversationSpeed(1)">🏃</button>
            </div>
            
            <div class="conversation-main-controls">
                <button class="conversation-play-btn primary ${conversationPlaying ? 'playing' : ''}" onclick="toggleFullConversation()" id="playConvBtn">
                    <i class="fas fa-${conversationPlaying ? 'stop' : 'play'}"></i>
                    ${conversationPlaying ? 'إيقاف' : 'تشغيل المحادثة'}
                </button>
            </div>
            
            <div id="practiceSection" style="display: ${appState.conversationMode === 'practice' ? 'block' : 'none'};">
                <div class="conversation-practice-section">
                    <div class="conversation-practice-title">
                        <i class="fas fa-user-friends"></i>
                        اختر دورك في المحادثة:
                    </div>
                    <div class="conversation-role-selector">
                        <button class="role-btn ${appState.selectedRole === 'A' ? 'active' : ''}" onclick="selectRole('A')">
                            👨 الشخص A
                        </button>
                        <button class="role-btn ${appState.selectedRole === 'B' ? 'active' : ''}" onclick="selectRole('B')">
                            👩 الشخص B
                        </button>
                    </div>
                    <button class="conversation-record-btn" onclick="startConversationPractice()" id="practiceBtn">
                        <i class="fas fa-play-circle"></i>
                        ابدأ التدريب
                    </button>
                </div>
            </div>
            
            <div class="conversation-progress-bar">
                <div class="conversation-progress-fill" id="convProgressFill" style="width: 0%"></div>
            </div>
        </div>
    `;
    
    $('conversationDetailContent').innerHTML = html;
}

function setConversationMode(mode) {
    appState.conversationMode = mode;
    saveState();
    
    $$('.conversation-mode-tab').forEach(tab => tab.classList.remove('active'));
    document.querySelector(`.conversation-mode-tab:${mode === 'listen' ? 'first' : 'last'}-child`)?.classList.add('active');
    
    const practiceSection = $('practiceSection');
    if (practiceSection) practiceSection.style.display = mode === 'practice' ? 'block' : 'none';
}

function selectRole(role) {
    appState.selectedRole = role;
    saveState();
    $$('.role-btn').forEach(btn => btn.classList.remove('active'));
    document.querySelector(`.role-btn:${role === 'A' ? 'first' : 'last'}-child`)?.classList.add('active');
}

function speakConversationLine(index) {
    if (!currentConversation) return;
    const line = currentConversation.dialogue[index];
    if (line) { 
        speak(line.it, appState.conversationSpeed); 
        highlightConversationLine(index);
        updateConversationProgress(index);
    }
}

function highlightConversationLine(index) {
    $$('.conversation-bubble').forEach(el => el.classList.remove('highlighted'));
    const lineEl = $(`conv-line-${index}`);
    if (lineEl) {
        lineEl.classList.add('highlighted');
        lineEl.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
}

function updateConversationProgress(index) {
    if (!currentConversation) return;
    const progress = ((index + 1) / currentConversation.dialogue.length) * 100;
    const fill = $('convProgressFill');
    if (fill) fill.style.width = `${progress}%`;
}

function setConversationSpeed(speed) {
    appState.conversationSpeed = speed;
    saveState();
    $$('.conversation-speed-btn').forEach(btn => btn.classList.remove('active'));
    event.target.classList.add('active');
    showToast(`سرعة النطق: ${speed === 0.6 ? 'بطيئة' : speed === 0.8 ? 'عادية' : 'سريعة'}`, 'info');
}

function toggleFullConversation() {
    if (conversationPlaying) stopConversation();
    else playFullConversation();
}

async function playFullConversation() {
    if (!currentConversation || conversationPlaying) return;
    conversationPlaying = true;
    
    const btn = $('playConvBtn');
    if (btn) {
        btn.innerHTML = '<i class="fas fa-stop"></i> إيقاف';
        btn.classList.add('playing');
    }
    
    const baseDelay = 2000 / appState.conversationSpeed;
    
    for (let i = 0; i < currentConversation.dialogue.length && conversationPlaying; i++) {
        const line = currentConversation.dialogue[i];
        currentConversationLine = i;
        highlightConversationLine(i);
        updateConversationProgress(i);
        
        await speakAndWait(line.it, appState.conversationSpeed);
        
        if (!conversationPlaying) break;
        
        await new Promise(r => setTimeout(r, baseDelay));
    }
    
    if (conversationPlaying) {
        showToast('🎉 انتهت المحادثة!', 'success');
    }
    stopConversation();
}

function speakAndWait(text, rate) {
    return new Promise(resolve => {
        if (!appState.soundEnabled || !('speechSynthesis' in window)) {
            resolve();
            return;
        }
        
        speechSynthesis.cancel();
        const u = new SpeechSynthesisUtterance(text);
        u.lang = 'it-IT';
        u.rate = rate;
        u.onend = resolve;
        u.onerror = resolve;
        speechSynthesis.speak(u);
    });
}

function stopConversation() {
    conversationPlaying = false;
    speechSynthesis.cancel();
    
    const btn = $('playConvBtn');
    if (btn) {
        btn.innerHTML = '<i class="fas fa-play"></i> تشغيل المحادثة';
        btn.classList.remove('playing');
    }
    
    $$('.conversation-bubble').forEach(el => el.classList.remove('highlighted'));
}

async function startConversationPractice() {
    if (!currentConversation) return;
    
    const practiceBtn = $('practiceBtn');
    practiceBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> جاري التدريب...';
    practiceBtn.classList.add('recording');
    
    const userRole = appState.selectedRole;
    
    for (let i = 0; i < currentConversation.dialogue.length; i++) {
        const line = currentConversation.dialogue[i];
        currentConversationLine = i;
        highlightConversationLine(i);
        updateConversationProgress(i);
        
        if (line.speaker === userRole) {
            showToast(`🎤 دورك! انطق: "${line.it}"`, 'info');
            const lineEl = $(`conv-line-${i}`);
            if (lineEl) lineEl.style.border = '2px solid var(--secondary)';
            
            await new Promise(r => setTimeout(r, 3000));
            
            if (lineEl) lineEl.style.border = '';
        } else {
            await speakAndWait(line.it, appState.conversationSpeed);
            await new Promise(r => setTimeout(r, 1000));
        }
    }
    
    practiceBtn.innerHTML = '<i class="fas fa-play-circle"></i> ابدأ التدريب';
    practiceBtn.classList.remove('recording');
    showToast('🎉 أحسنت! أكملت التدريب', 'success');
    addXP(10);
}

// ==================== Grammar ====================
function renderGrammar() {
    const container = $('grammarList');
    const lessons = DATABASE.grammar[appState.currentLevel] || [];
    
    if (!lessons.length) {
        container.innerHTML = '<div class="empty-state"><i class="fas fa-book"></i><p>لا توجد دروس</p></div>';
        return;
    }
    
    container.innerHTML = lessons.map(l => `<div class="category-item" onclick="openGrammarLesson('${l.id}')"><div class="category-icon" style="background: linear-gradient(135deg, var(--b2-color), #F87171); color: white;"><i class="fas fa-${getCategoryIcon(l.icon, l.id)}"></i></div><div class="category-info"><div class="category-name">${l.title}</div><div class="category-meta">${l.subtitle || ''}</div></div><i class="fas fa-chevron-left category-arrow"></i></div>`).join('');
}

function openGrammarLesson(lessonId) {
    const lessons = DATABASE.grammar[appState.currentLevel] || [];
    const lesson = lessons.find(l => l.id === lessonId);
    if (!lesson?.content) return;
    
    $('grammarDetailTitle').textContent = lesson.title;
    
    let html = `<div class="grammar-section"><div class="grammar-section-title"><i class="fas fa-info-circle"></i> الشرح</div><p style="font-size: 14px; line-height: 1.8;">${lesson.content.explanation}</p></div>`;
    
    if (lesson.content.table?.length) {
        html += `<div class="grammar-section"><div class="grammar-section-title"><i class="fas fa-table"></i> التصريف</div><table class="grammar-table"><thead><tr><th>الضمير</th><th>التصريف</th><th>المعنى</th></tr></thead><tbody>${lesson.content.table.map(row => `<tr><td>${row.pronoun}</td><td class="italian-cell" style="font-weight: 700; color: var(--primary);">${row.conjugation}</td><td>${row.meaning}</td></tr>`).join('')}</tbody></table></div>`;
    }
    
    if (lesson.content.examples?.length) {
        html += `<div class="grammar-section"><div class="grammar-section-title"><i class="fas fa-lightbulb"></i> أمثلة</div>${lesson.content.examples.map(ex => `<div class="grammar-example"><div class="grammar-example-it">${ex.it}<button onclick="speak('${escapeQuotes(ex.it)}')" style="background: none; border: none; color: var(--primary); cursor: pointer; margin-right: 10px;"><i class="fas fa-volume-up"></i></button></div><div class="grammar-example-ar">${ex.ar}</div></div>`).join('')}</div>`;
    }
    
    $('grammarDetailContent').innerHTML = html;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('grammarDetailPage').classList.add('active');
    addXP(5);
}

// ==================== Quiz ====================
function startQuiz(type) {
    quizType = type;
    quizQuestions = generateQuiz(type);
    if (quizQuestions.length < 4) { showToast('لا توجد أسئلة كافية', 'warning'); return; }
    currentQuizIndex = 0;
    quizScore = 0;
    $('quizContainer').style.display = 'block';
    $('quizResult').style.display = 'none';
    $('quizTotalQ').textContent = quizQuestions.length;
    $('quizListeningBtn').style.display = type === 'listening' ? 'block' : 'none';
    $('quizVoiceInput').style.display = type === 'voice' ? 'block' : 'none';
    $('quizOptions').style.display = type === 'voice' ? 'none' : 'flex';
    $$('.page').forEach(p => p.classList.remove('active'));
    $('quizPage').classList.add('active');
    displayQuizQuestion();
}

function generateQuiz(type) {
    const allWords = [];
    const cats = DATABASE.words[appState.currentLevel] || {};
    Object.values(cats).forEach(cat => cat.words?.forEach(w => allWords.push(w)));
    if (allWords.length < 4) return [];
    
    let questions = [];
    allWords.forEach(word => {
        if (type === 'reverse') {
            questions.push({ question: `ما الترجمة الإيطالية لـ "${word.ar}"؟`, correct: word.it, allAnswers: allWords.map(w => w.it), audio: word.it, isItalianOptions: true });
        } else if (type === 'listening') {
            questions.push({ question: 'استمع واختر الترجمة الصحيحة', correct: word.ar, allAnswers: allWords.map(w => w.ar), audio: word.it });
        } else if (type === 'voice') {
            questions.push({ question: 'انطق الكلمة التالية:', word: word.it, correct: word.it, translation: word.ar });
        } else {
            questions.push({ question: `ما معنى "<span class="italian-word">${word.it}</span>"؟`, correct: word.ar, allAnswers: allWords.map(w => w.ar), audio: word.it });
        }
    });
    
    questions = questions.sort(() => Math.random() - 0.5).slice(0, type === 'mixed' ? 15 : 10);
    questions.forEach(q => {
        if (q.allAnswers) {
            const wrong = q.allAnswers.filter(a => a !== q.correct).sort(() => Math.random() - 0.5).slice(0, 3);
            q.options = [q.correct, ...wrong].sort(() => Math.random() - 0.5);
        }
    });
    return questions;
}

function displayQuizQuestion() {
    const q = quizQuestions[currentQuizIndex];
    $('quizCurrentQ').textContent = currentQuizIndex + 1;
    $('quizProgressBar').style.width = ((currentQuizIndex + 1) / quizQuestions.length * 100) + '%';
    
    if (quizType === 'voice') {
        $('quizQuestionText').innerHTML = q.question;
        $('quizQuestionHint').innerHTML = `<span style="font-size: 24px; font-weight: 700; color: var(--primary);">${q.word}</span><br><small>${q.translation}</small>`;
        $('quizOptions').style.display = 'none';
        $('quizVoiceInput').style.display = 'block';
        $('voiceResult').style.display = 'none';
    } else {
        $('quizQuestionText').innerHTML = q.question;
        $('quizQuestionHint').textContent = quizType === 'listening' ? 'اضغط للاستماع' : 'اختر الإجابة الصحيحة';
        $('quizOptions').style.display = 'flex';
        $('quizVoiceInput').style.display = 'none';
        
        const letters = ['أ', 'ب', 'ج', 'د'];
        const showSpeak = quizType === 'reverse' && q.isItalianOptions;
        $('quizOptions').innerHTML = q.options.map((opt, i) => `
            <div class="quiz-option" onclick="selectQuizOption(this, '${escapeQuotes(opt)}')">
                <div class="quiz-option-letter">${letters[i]}</div>
                <span class="quiz-option-text ${showSpeak ? 'italian-text' : ''}">${opt}</span>
                ${showSpeak ? `<button class="quiz-option-speak" onclick="event.stopPropagation(); speak('${escapeQuotes(opt)}')"><i class="fas fa-volume-up"></i></button>` : ''}
            </div>
        `).join('');
    }
    
    $('quizNextBtn').style.display = 'none';
    if (quizType === 'listening' && q.audio) setTimeout(() => speak(q.audio), 500);
}

function playQuizAudio() {
    const q = quizQuestions[currentQuizIndex];
    if (q?.audio) speak(q.audio);
}

function selectQuizOption(el, selected) {
    const q = quizQuestions[currentQuizIndex];
    $$('.quiz-option').forEach(o => o.classList.add('disabled'));
    el.classList.add('selected');
    appState.totalQuizQuestions++;
    
    if (selected === q.correct) {
        el.classList.add('correct');
        quizScore++;
        appState.totalCorrectAnswers++;
        showToast('✓ صحيح!', 'success');
    } else {
        el.classList.add('wrong');
        $$('.quiz-option').forEach(o => {
            if (o.querySelector('.quiz-option-text').textContent === q.correct) o.classList.add('correct');
        });
        showToast('✗ خطأ!', 'error');
    }
    
    $('quizNextBtn').style.display = 'block';
    $('quizNextBtn').innerHTML = currentQuizIndex < quizQuestions.length - 1 ? 'التالي <i class="fas fa-chevron-left"></i>' : 'النتائج <i class="fas fa-trophy"></i>';
}

function nextQuizQuestion() {
    if (currentQuizIndex < quizQuestions.length - 1) { currentQuizIndex++; displayQuizQuestion(); }
    else showQuizResult();
}

function showQuizResult() {
    $('quizContainer').style.display = 'none';
    $('quizResult').style.display = 'block';
    
    const percent = Math.round((quizScore / quizQuestions.length) * 100);
    const xpEarned = quizScore * 5;
    if (percent === 100) appState.perfectQuizzes++;
    
    let icon = '💪', title = 'حاول مجدداً!';
    if (percent >= 90) { icon = '🏆'; title = 'ممتاز!'; }
    else if (percent >= 70) { icon = '🎉'; title = 'جيد جداً!'; }
    else if (percent >= 50) { icon = '👍'; title = 'جيد!'; }
    
    $('quizResultIcon').textContent = icon;
    $('quizResultTitle').textContent = title;
    $('quizResultScore').textContent = `${quizScore}/${quizQuestions.length} (${percent}%)`;
    $('quizCorrectCount').textContent = quizScore;
    $('quizWrongCount').textContent = quizQuestions.length - quizScore;
    $('quizXPEarned').textContent = '+' + xpEarned;
    
    appState.quizzesDone++;
    addXP(xpEarned);
}

function restartQuiz() { startQuiz(quizType); }
function confirmExitQuiz() { if (confirm('الخروج من الاختبار؟')) goHome(); }

// ==================== Practice Exercises ====================
function startFlashcards() {
    const words = getCurrentLevelWords();
    if (!words.length) { showToast('لا توجد كلمات', 'warning'); return; }
    currentWords = words.sort(() => Math.random() - 0.5).slice(0, 20);
    currentWordIndex = 0;
    currentCategory = 'practice';
    $('wordCategoryTitle').textContent = `بطاقات - ${appState.currentLevel.toUpperCase()}`;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('wordStudyPage').classList.add('active');
    displayCurrentWord();
}

function startSpellingExercise() {
    exerciseWords = getCurrentLevelWords().sort(() => Math.random() - 0.5).slice(0, 10);
    if (exerciseWords.length < 3) { showToast('لا توجد كلمات كافية', 'warning'); return; }
    exerciseIndex = 0; exerciseScore = 0; exerciseType = 'spelling';
    $('exerciseTitle').textContent = `تمرين الإملاء - ${appState.currentLevel.toUpperCase()}`;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('exercisePage').classList.add('active');
    displaySpellingExercise();
}

function displaySpellingExercise() {
    if (exerciseIndex >= exerciseWords.length) { showExerciseResult(); return; }
    const word = exerciseWords[exerciseIndex];
    $('exerciseProgress').textContent = `${exerciseIndex + 1}/${exerciseWords.length}`;
    $('exerciseContent').innerHTML = `
        <div class="exercise-card">
            <div class="exercise-title">اكتب الكلمة الإيطالية لـ:</div>
            <div style="font-size: 24px; font-weight: 800; text-align: center; margin-bottom: 20px; color: var(--primary);">${word.ar}</div>
            <button class="listening-btn" onclick="speak('${escapeQuotes(word.it)}')"><i class="fas fa-volume-up"></i></button>
            <div class="exercise-hint">💡 اضغط للاستماع</div>
            <input type="text" class="exercise-input" id="spellingInput" placeholder="اكتب الكلمة..." autocomplete="off">
            <button class="word-control-btn primary" onclick="checkSpelling()" style="width: 100%;">تحقق <i class="fas fa-check"></i></button>
        </div>
    `;
    $('spellingInput')?.focus();
}

function checkSpelling() {
    const input = $('spellingInput');
    const word = exerciseWords[exerciseIndex];
    if (input.value.trim().toLowerCase() === word.it.toLowerCase()) {
        input.classList.add('correct'); exerciseScore++; addXP(5); showToast('✓ صحيح!', 'success');
    } else {
        input.classList.add('wrong'); showToast(`✗ الإجابة: ${word.it}`, 'error');
    }
    setTimeout(() => { exerciseIndex++; displaySpellingExercise(); }, 1500);
}

function startWordBuilder() {
    exerciseWords = getCurrentLevelWords().sort(() => Math.random() - 0.5).slice(0, 10);
    if (exerciseWords.length < 3) { showToast('لا توجد كلمات كافية', 'warning'); return; }
    exerciseIndex = 0; exerciseScore = 0; exerciseType = 'builder'; selectedLetters = [];
    $('exerciseTitle').textContent = `تركيب الكلمات - ${appState.currentLevel.toUpperCase()}`;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('exercisePage').classList.add('active');
    displayWordBuilder();
}

function displayWordBuilder() {
    if (exerciseIndex >= exerciseWords.length) { showExerciseResult(); return; }
    const word = exerciseWords[exerciseIndex];
    const letters = word.it.split('').sort(() => Math.random() - 0.5);
    selectedLetters = [];
    $('exerciseProgress').textContent = `${exerciseIndex + 1}/${exerciseWords.length}`;
    $('exerciseContent').innerHTML = `
        <div class="exercise-card">
            <div class="exercise-title">رتب الحروف لتكوين الكلمة:</div>
            <div style="font-size: 20px; font-weight: 700; text-align: center; margin-bottom: 20px; color: var(--text-secondary);">${word.ar}</div>
            <div class="answer-tiles" id="answerTiles"></div>
            <div class="letter-tiles" id="letterTiles">
                ${letters.map((l, i) => `<div class="letter-tile" data-index="${i}" onclick="selectLetter(this, '${l}', ${i})">${l}</div>`).join('')}
            </div>
            <div style="display: flex; gap: 10px; margin-top: 15px;">
                <button class="word-control-btn secondary" onclick="clearAnswer()" style="flex: 1;"><i class="fas fa-undo"></i> مسح</button>
                <button class="word-control-btn primary" onclick="checkWordBuilder()" style="flex: 1;">تحقق <i class="fas fa-check"></i></button>
            </div>
        </div>
    `;
}

function selectLetter(el, letter, index) {
    if (el.classList.contains('disabled')) return;
    el.classList.add('disabled');
    selectedLetters.push({ letter, index, el });
    const tile = document.createElement('div');
    tile.className = 'letter-tile selected';
    tile.textContent = letter;
    tile.onclick = () => { tile.remove(); el.classList.remove('disabled'); selectedLetters = selectedLetters.filter(l => l.el !== el); };
    $('answerTiles').appendChild(tile);
}

function clearAnswer() {
    $('answerTiles').innerHTML = '';
    $$('.letter-tile').forEach(t => t.classList.remove('disabled'));
    selectedLetters = [];
}

function checkWordBuilder() {
    const word = exerciseWords[exerciseIndex];
    const answer = selectedLetters.map(l => l.letter).join('');
    if (answer.toLowerCase() === word.it.toLowerCase()) {
        exerciseScore++; addXP(5); showToast('✓ صحيح!', 'success');
    } else {
        showToast(`✗ الإجابة: ${word.it}`, 'error');
    }
    selectedLetters = [];
    setTimeout(() => { exerciseIndex++; displayWordBuilder(); }, 1500);
}

function startMatchingGame() {
    const words = getCurrentLevelWords().sort(() => Math.random() - 0.5).slice(0, 6);
    if (words.length < 4) { showToast('لا توجد كلمات كافية', 'warning'); return; }
    matchingCards = [];
    words.forEach(w => {
        matchingCards.push({ id: w.it + '_it', text: w.it, pair: w.it, type: 'it', matched: false });
        matchingCards.push({ id: w.it + '_ar', text: w.ar, pair: w.it, type: 'ar', matched: false });
    });
    matchingCards = matchingCards.sort(() => Math.random() - 0.5);
    firstSelectedCard = null; matchingLocked = false; matchedCount = 0; matchingMoves = 0; exerciseType = 'matching';
    $('exerciseTitle').textContent = `لعبة المطابقة - ${appState.currentLevel.toUpperCase()}`;
    $('exerciseProgress').textContent = `0/${words.length}`;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('exercisePage').classList.add('active');
    renderMatchingGame();
}

function renderMatchingGame() {
    const totalPairs = matchingCards.length / 2;
    $('exerciseContent').innerHTML = `
        <div class="exercise-card">
            <div class="exercise-title">طابق الكلمات الإيطالية بمعانيها العربية</div>
            <div class="matching-stats">
                <div class="matching-stat"><div class="matching-stat-value" id="matchingPairs">${matchedCount}/${totalPairs}</div><div class="matching-stat-label">أزواج</div></div>
                <div class="matching-stat"><div class="matching-stat-value" id="matchingMoves">${matchingMoves}</div><div class="matching-stat-label">محاولات</div></div>
            </div>
            <div class="matching-game" id="matchingGame">
                ${matchingCards.map((card, i) => `<div class="matching-card ${card.type === 'it' ? 'italian-card' : ''} ${card.matched ? 'matched' : ''}" data-index="${i}" onclick="selectMatchingCard(${i})">${card.text}</div>`).join('')}
            </div>
        </div>
    `;
}

function selectMatchingCard(index) {
    if (matchingLocked) return;
    const card = matchingCards[index];
    if (card.matched) return;
    const cardEl = document.querySelector(`.matching-card[data-index="${index}"]`);
    if (!cardEl || cardEl.classList.contains('flipped')) return;
    cardEl.classList.add('flipped');
    
    if (!firstSelectedCard) {
        firstSelectedCard = { index, card, el: cardEl };
    } else {
        matchingMoves++;
        $('matchingMoves').textContent = matchingMoves;
        if (firstSelectedCard.index === index) return;
        
        if (firstSelectedCard.card.pair === card.pair && firstSelectedCard.card.type !== card.type) {
            matchingLocked = true;
            setTimeout(() => {
                firstSelectedCard.el.classList.remove('flipped');
                firstSelectedCard.el.classList.add('matched');
                cardEl.classList.remove('flipped');
                cardEl.classList.add('matched');
                matchingCards[firstSelectedCard.index].matched = true;
                matchingCards[index].matched = true;
                matchedCount++;
                $('matchingPairs').textContent = `${matchedCount}/${matchingCards.length / 2}`;
                $('exerciseProgress').textContent = `${matchedCount}/${matchingCards.length / 2}`;
                addXP(5);
                showToast('✓ تطابق!', 'success');
                firstSelectedCard = null;
                matchingLocked = false;
                if (matchedCount === matchingCards.length / 2) {
                    setTimeout(() => {
                        addXP(Math.max(0, 30 - matchingMoves) * 2);
                        showToast(`🎉 أحسنت! أكملت في ${matchingMoves} محاولة`, 'success');
                        setTimeout(() => openSection('practice'), 1500);
                    }, 500);
                }
            }, 300);
        } else {
            matchingLocked = true;
            firstSelectedCard.el.classList.add('wrong');
            cardEl.classList.add('wrong');
            setTimeout(() => {
                firstSelectedCard.el.classList.remove('flipped', 'wrong');
                cardEl.classList.remove('flipped', 'wrong');
                firstSelectedCard = null;
                matchingLocked = false;
            }, 800);
        }
    }
}

function startListeningExercise() {
    exerciseWords = getCurrentLevelWords().sort(() => Math.random() - 0.5).slice(0, 10);
    if (exerciseWords.length < 3) { showToast('لا توجد كلمات كافية', 'warning'); return; }
    exerciseIndex = 0; exerciseScore = 0; exerciseType = 'listening';
    $('exerciseTitle').textContent = `تمرين الاستماع - ${appState.currentLevel.toUpperCase()}`;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('exercisePage').classList.add('active');
    displayListeningExercise();
}

function displayListeningExercise() {
    if (exerciseIndex >= exerciseWords.length) { showExerciseResult(); return; }
    const word = exerciseWords[exerciseIndex];
    $('exerciseProgress').textContent = `${exerciseIndex + 1}/${exerciseWords.length}`;
    $('exerciseContent').innerHTML = `
        <div class="exercise-card">
            <div class="exercise-title">استمع واكتب ما تسمعه</div>
            <button class="listening-btn" onclick="speak('${escapeQuotes(word.it)}')"><i class="fas fa-volume-up"></i></button>
            <div class="exercise-hint">اضغط للاستماع</div>
            <input type="text" class="exercise-input" id="listeningInput" placeholder="اكتب ما سمعته..." autocomplete="off">
            <button class="word-control-btn primary" onclick="checkListening()" style="width: 100%;">تحقق <i class="fas fa-check"></i></button>
        </div>
    `;
    setTimeout(() => speak(word.it), 500);
}

function checkListening() {
    const input = $('listeningInput');
    const word = exerciseWords[exerciseIndex];
    if (input.value.trim().toLowerCase() === word.it.toLowerCase()) {
        input.classList.add('correct'); exerciseScore++; addXP(5); showToast('✓ صحيح!', 'success');
    } else {
        input.classList.add('wrong'); showToast(`✗ الإجابة: ${word.it} (${word.ar})`, 'error');
    }
    setTimeout(() => { exerciseIndex++; displayListeningExercise(); }, 1500);
}

function startSpeedChallenge() {
    exerciseWords = getCurrentLevelWords().sort(() => Math.random() - 0.5).slice(0, 10);
    if (exerciseWords.length < 4) { showToast('لا توجد كلمات كافية', 'warning'); return; }
    exerciseIndex = 0; exerciseScore = 0; exerciseType = 'speed'; speedTimeLeft = 60;
    $('exerciseTitle').textContent = `تحدي السرعة - ${appState.currentLevel.toUpperCase()}`;
    $$('.page').forEach(p => p.classList.remove('active'));
    $('exercisePage').classList.add('active');
    speedTimer = setInterval(() => {
        speedTimeLeft--;
        const el = $('speedTimer');
        if (el) el.textContent = speedTimeLeft;
        if (speedTimeLeft <= 0) { clearInterval(speedTimer); showExerciseResult(); }
    }, 1000);
    displaySpeedQuestion();
}

function displaySpeedQuestion() {
    if (exerciseIndex >= exerciseWords.length) { clearInterval(speedTimer); showExerciseResult(); return; }
    const word = exerciseWords[exerciseIndex];
    const allWords = getCurrentLevelWords();
    const wrong = allWords.filter(w => w.ar !== word.ar).sort(() => Math.random() - 0.5).slice(0, 3);
    const options = [word.ar, ...wrong.map(w => w.ar)].sort(() => Math.random() - 0.5);
    $('exerciseProgress').textContent = `${exerciseIndex + 1}/${exerciseWords.length}`;
    $('exerciseContent').innerHTML = `
        <div class="exercise-card">
            <div style="display: flex; justify-content: space-between; margin-bottom: 15px;">
                <div style="font-size: 14px; font-weight: 700;">⏱️ <span id="speedTimer">${speedTimeLeft}</span> ثانية</div>
                <div style="font-size: 14px; font-weight: 700;">🎯 ${exerciseScore} نقطة</div>
            </div>
            <div class="exercise-title">ما معنى "<span class="italian-text">${word.it}</span>"؟</div>
            <div class="quiz-options">
                ${options.map(opt => `<div class="quiz-option" onclick="selectSpeedAnswer(this, '${escapeQuotes(opt)}', '${escapeQuotes(word.ar)}')"><span>${opt}</span></div>`).join('')}
            </div>
        </div>
    `;
}

function selectSpeedAnswer(el, selected, correct) {
    $$('.quiz-option').forEach(o => o.classList.add('disabled'));
    if (selected === correct) { el.classList.add('correct'); exerciseScore++; addXP(3); }
    else { el.classList.add('wrong'); }
    setTimeout(() => { exerciseIndex++; displaySpeedQuestion(); }, 500);
}

function showExerciseResult() {
    if (speedTimer) clearInterval(speedTimer);
    const percent = Math.round((exerciseScore / exerciseWords.length) * 100);
    $('exerciseContent').innerHTML = `
        <div class="exercise-card" style="text-align: center;">
            <div style="font-size: 50px; margin-bottom: 15px;">${percent >= 70 ? '🎉' : '💪'}</div>
            <div style="font-size: 22px; font-weight: 800; margin-bottom: 10px;">${percent >= 70 ? 'ممتاز!' : 'أحسنت!'}</div>
            <div style="font-size: 18px; margin-bottom: 20px;">${exerciseScore}/${exerciseWords.length} (${percent}%)</div>
            <button class="word-control-btn primary" onclick="openSection('practice')" style="width: 100%;"><i class="fas fa-arrow-right"></i> العودة</button>
        </div>
    `;
}

function exitExercise() {
    if (speedTimer) clearInterval(speedTimer);
    openSection('practice');
}

// ==================== Achievements ====================
function checkAchievements() {
    const stats = getAchievementStats();
    ACHIEVEMENTS.forEach(ach => {
        if (!appState.unlockedAchievements.includes(ach.id) && ach.condition(stats)) {
            unlockAchievement(ach);
        }
    });
    updateAchievementsUI();
}

function getAchievementStats() {
    let totalWordsLearned = 0;
    Object.values(appState.learnedWords).forEach(c => totalWordsLearned += Object.keys(c).length);
    return { totalWordsLearned, quizzesDone: appState.quizzesDone, perfectQuizzes: appState.perfectQuizzes, streak: appState.streak, xp: appState.xp, likedWords: appState.likedWords };
}

function unlockAchievement(ach) {
    appState.unlockedAchievements.push(ach.id);
    appState.newAchievements.push(ach.id);
    appState.xp += ach.xp;
    addNotification('achievement', `إنجاز جديد: ${ach.title}`, ach.desc, Date.now());
    saveState();
    showAchievementModal(ach);
}

function showAchievementModal(ach) {
    $('achievementUnlockedIcon').textContent = ach.icon;
    $('achievementUnlockedTitle').textContent = ach.title;
    $('achievementUnlockedDesc').textContent = ach.desc;
    $('achievementUnlockedXP').textContent = '+' + ach.xp + ' XP';
    $('modalOverlay').classList.add('show');
    $('achievementModal').classList.add('show');
}

function closeAchievementModal() {
    $('modalOverlay').classList.remove('show');
    $('achievementModal').classList.remove('show');
}

function updateAchievementsUI() {
    const badge = $('achievementsBadge');
    if (badge) badge.style.display = appState.newAchievements.length > 0 ? 'flex' : 'none';
}

function renderAchievements() {
    const grid = $('achievementsGrid');
    const stats = getAchievementStats();
    grid.innerHTML = ACHIEVEMENTS.map(ach => {
        const unlocked = appState.unlockedAchievements.includes(ach.id);
        const progress = getAchievementProgress(ach, stats);
        return `<div class="achievement-card ${unlocked ? 'unlocked' : 'locked'}">${unlocked ? '<div class="achievement-badge">✓</div>' : ''}<div class="achievement-xp">+${ach.xp} XP</div><div class="achievement-icon">${ach.icon}</div><div class="achievement-title">${ach.title}</div><div class="achievement-desc">${ach.desc}</div>${!unlocked ? `<div class="achievement-progress"><div class="achievement-progress-fill" style="width: ${progress}%"></div></div>` : ''}</div>`;
    }).join('');
    appState.newAchievements = [];
    saveState();
    updateAchievementsUI();
    $('unlockedAchievements').textContent = appState.unlockedAchievements.length;
}

function getAchievementProgress(ach, stats) {
    const targets = { first_word: 1, ten_words: 10, fifty_words: 50, hundred_words: 100, first_quiz: 1, five_quizzes: 5, perfect_quiz: 1, streak_3: 3, streak_7: 7, xp_100: 100, xp_500: 500, liked_10: 10 };
    const values = { first_word: stats.totalWordsLearned, ten_words: stats.totalWordsLearned, fifty_words: stats.totalWordsLearned, hundred_words: stats.totalWordsLearned, first_quiz: stats.quizzesDone, five_quizzes: stats.quizzesDone, perfect_quiz: stats.perfectQuizzes, streak_3: stats.streak, streak_7: stats.streak, xp_100: stats.xp, xp_500: stats.xp, liked_10: stats.likedWords.length };
    return Math.min((values[ach.id] / targets[ach.id]) * 100, 100) || 0;
}

// ==================== Statistics - Fixed Average Time ====================
function renderStatistics() {
    let totalWords = 0;
    Object.values(appState.learnedWords).forEach(c => totalWords += Object.keys(c).length);
    
    $('statTotalWords').textContent = totalWords;
    $('statTotalXP').textContent = appState.xp;
    $('statTotalQuizzes').textContent = appState.quizzesDone;
    $('statAccuracy').textContent = (appState.totalQuizQuestions > 0 
        ? Math.round((appState.totalCorrectAnswers / appState.totalQuizQuestions) * 100) 
        : 0) + '%';
    
    $('statCurrentStreak').textContent = appState.streak;
    $('statLongestStreak').textContent = appState.longestStreak;
    $('statTotalDays').textContent = appState.totalDaysLearned;
    
    // حساب متوسط الوقت بشكل صحيح
    const avgTime = calculateAverageStudyTime();
    $('statAvgTime').textContent = avgTime;
    
    ['a1', 'a2', 'b1', 'b2'].forEach(level => {
        const progress = calculateLevelProgress(level);
        const progressEl = $(`stat${level.toUpperCase()}Progress`);
        const valueEl = $(`stat${level.toUpperCase()}Value`);
        if (progressEl) progressEl.style.width = progress + '%';
        if (valueEl) valueEl.textContent = progress + '%';
    });
    
    renderWeeklyChart();
}

function calculateAverageStudyTime() {
    // أولاً: تحقق من وجود جلسات مسجلة
    if (appState.studySessions && appState.studySessions.length > 0) {
        const totalDuration = appState.studySessions.reduce((acc, session) => {
            return acc + (session.duration || 0);
        }, 0);
        
        const avgMilliseconds = totalDuration / appState.studySessions.length;
        const avgMinutes = Math.round(avgMilliseconds / 60000);
        
        if (avgMinutes > 0) {
            return formatStudyTime(avgMinutes);
        }
    }
    
    // ثانياً: تقدير بناءً على XP وعدد الأيام
    const totalDays = appState.totalDaysLearned || 1;
    const totalXP = appState.xp || 0;
    
    // تقدير: كل 10 XP ≈ 1 دقيقة من الدراسة
    const estimatedTotalMinutes = Math.round(totalXP / 10);
    const avgMinutesPerDay = Math.round(estimatedTotalMinutes / totalDays);
    
    if (avgMinutesPerDay > 0) {
        return formatStudyTime(avgMinutesPerDay);
    }
    
    // ثالثاً: تقدير بناءً على عدد الكلمات المتعلمة
    let totalWordsLearned = 0;
    Object.values(appState.learnedWords).forEach(cat => {
        totalWordsLearned += Object.keys(cat).length;
    });
    
    // تقدير: كل كلمة ≈ 30 ثانية
    const estimatedFromWords = Math.round((totalWordsLearned * 0.5) / totalDays);
    
    if (estimatedFromWords > 0) {
        return formatStudyTime(estimatedFromWords);
    }
    
    return '0 د';
}

function formatStudyTime(minutes) {
    if (minutes < 1) return '< 1 د';
    if (minutes < 60) return `${minutes} د`;
    
    const hours = Math.floor(minutes / 60);
    const mins = minutes % 60;
    
    if (mins === 0) return `${hours} س`;
    return `${hours} س ${mins} د`;
}

function calculateLevelProgress(level) {
    let total = 0, learned = 0;
    Object.entries(DATABASE.words[level] || {}).forEach(([catId, cat]) => {
        if (cat.words) {
            total += cat.words.length;
            learned += Object.keys(appState.learnedWords[`${level}_${catId}`] || {}).length;
        }
    });
    return total > 0 ? Math.round((learned / total) * 100) : 0;
}

function renderWeeklyChart() {
    const chart = $('weeklyChart');
    if (!chart) return;
    const days = ['س', 'أ', 'إ', 'ث', 'أ', 'خ', 'ج'];
    const maxXP = Math.max(...appState.weeklyXP, 50);
    chart.innerHTML = appState.weeklyXP.map((xp, i) => `<div class="chart-bar" style="height: 100%;"><div class="chart-bar-fill" style="height: ${maxXP > 0 ? (xp / maxXP) * 100 : 0}%"></div><div class="chart-bar-label">${days[i]}</div></div>`).join('');
}

// ==================== Streak & XP ====================
function checkStreak() {
    const today = new Date().toDateString();
    const yesterday = new Date(Date.now() - 86400000).toDateString();
    if (appState.lastStudyDate !== today) appState.dailyXP = 0;
    if (appState.lastStudyDate && appState.lastStudyDate !== today && appState.lastStudyDate !== yesterday) appState.streak = 0;
}

function recordStudy() {
    const today = new Date().toDateString();
    const dayOfWeek = new Date().getDay();
    if (appState.lastStudyDate !== today) {
        const yesterday = new Date(Date.now() - 86400000).toDateString();
        appState.streak = (appState.lastStudyDate === yesterday || !appState.lastStudyDate) ? appState.streak + 1 : 1;
        if (appState.streak > appState.longestStreak) appState.longestStreak = appState.streak;
        if ([3, 7, 30].includes(appState.streak)) addNotification('streak', `${appState.streak} أيام متتالية! 🔥`, 'استمر', Date.now());
        appState.lastStudyDate = today;
        appState.totalDaysLearned++;
    }
    appState.weeklyXP[dayOfWeek] = (appState.weeklyXP[dayOfWeek] || 0) + 1;
    saveState();
    updateUI();
}

function addXP(amount) {
    appState.xp += amount;
    appState.dailyXP += amount;
    appState.weeklyXP[new Date().getDay()] = (appState.weeklyXP[new Date().getDay()] || 0) + amount;
    
    // تتبع الجلسة
    if (appState.currentSession) {
        appState.currentSession.xpEarned = (appState.currentSession.xpEarned || 0) + amount;
    }
    
    if (appState.dailyXP >= appState.dailyGoal && appState.dailyXP - amount < appState.dailyGoal) {
        appState.dailyGoalCompleted++;
        addNotification('xp', 'أكملت هدفك اليومي! 🎯', `${appState.dailyGoal} XP`, Date.now());
        showToast('🎯 أكملت هدفك اليومي!', 'success');
    }
    const newLevel = Math.floor(appState.xp / 100) + 1;
    if (newLevel > appState.userLevel) {
        appState.userLevel = newLevel;
        addNotification('level', `وصلت للمستوى ${newLevel}! 🎉`, 'استمر', Date.now());
        showToast(`🎉 وصلت للمستوى ${newLevel}!`, 'success');
    }
    recordStudy();
    checkAchievements();
    saveState();
    requestAnimationFrame(updateUI);
}

// ==================== Profile ====================
function updateProfile() {
    $('profileLevel').textContent = appState.userLevel;
    $('profileXP').textContent = appState.xp;
    const xpCurrent = appState.xp % 100;
    $('profileProgressFill').style.width = xpCurrent + '%';
    $('profileXPNext').textContent = 100 - xpCurrent;
    
    let totalWords = 0;
    Object.values(appState.learnedWords).forEach(c => totalWords += Object.keys(c).length);
    $('totalWords').textContent = totalWords;
    $('totalQuizzes').textContent = appState.quizzesDone;
    $('currentStreak').textContent = appState.streak;
    $('longestStreak').textContent = appState.longestStreak;
    renderLikedWordsPreview();
}

function renderLikedWordsPreview() {
    const container = $('likedWordsPreview');
    $('likedCount').textContent = appState.likedWords.length + ' كلمات';
    if (!appState.likedWords.length) {
        container.innerHTML = '<div style="text-align: center; padding: 10px; color: var(--text-secondary); font-size: 12px;">لا توجد كلمات مفضلة</div>';
        return;
    }
    container.innerHTML = appState.likedWords.slice(0, 3).map(w => `<div style="display: inline-block; background: var(--light); padding: 5px 10px; border-radius: 15px; margin: 3px; font-size: 12px;">❤️ <span class="italian-text">${w.it}</span></div>`).join('');
    if (appState.likedWords.length > 3) container.innerHTML += `<div style="display: inline-block; color: var(--text-secondary); font-size: 11px; margin: 3px;">+${appState.likedWords.length - 3} أخرى</div>`;
}

function confirmDeleteLikedWord(index) {
    pendingDeleteWord = index;
    pendingAction = 'deleteLikedWord';
    const word = appState.likedWords[index];
    $('confirmIcon').textContent = '🗑️';
    $('confirmTitle').textContent = 'حذف الكلمة؟';
    $('confirmText').textContent = `هل تريد حذف "${word.it}" من المفضلة؟`;
    $('confirmBtn').textContent = 'حذف';
    $('modalOverlay').classList.add('show');
    $('confirmDialog').classList.add('show');
}

function confirmAction() {
    if (pendingAction === 'deleteLikedWord' && pendingDeleteWord !== null) {
        appState.likedWords.splice(pendingDeleteWord, 1);
        saveState();
        renderFavorites();
        renderLikedWordsPreview();
        updateWodLikeBtn();
        cachedDictionaryHTML = {};
        showToast('تم الحذف', 'success');
    }
    closeConfirmDialog();
}

function closeConfirmDialog() {
    $('modalOverlay').classList.remove('show');
    $('confirmDialog').classList.remove('show');
    pendingDeleteWord = null;
    pendingAction = null;
}

// ==================== UI Update ====================
const updateUI = throttle(() => {
    const set = (id, val) => { const el = $(id); if (el) el.textContent = val; };
    set('streakCount', appState.streak);
    set('xpCount', appState.xp);
    set('userLevel', appState.userLevel);
    set('dailyXP', appState.dailyXP);
    set('dailyTarget', appState.dailyGoal);
    
    const dailyFill = $('dailyGoalFill');
    if (dailyFill) dailyFill.style.width = Math.min((appState.dailyXP / appState.dailyGoal) * 100, 100) + '%';
    
    set('currentLevelDisplay', appState.currentLevel.toUpperCase());
    $$('.current-level-text').forEach(el => el.textContent = appState.currentLevel.toUpperCase());
    
    const progress = calculateLevelProgress(appState.currentLevel);
    set('levelProgress', progress + '%');
    const bar = $('levelProgressBar');
    if (bar) { bar.style.width = progress + '%'; bar.className = `progress-bar-fill ${appState.currentLevel}`; }
    
    updateStats();
    updateCounts();
    updateAchievementsUI();
    updateNotificationsBadge();
    updateLevelProgressIndicators();
}, 100);

function updateStats() {
    let wordsCount = 0;
    Object.keys(appState.learnedWords).forEach(key => {
        if (key.startsWith(appState.currentLevel + '_')) wordsCount += Object.keys(appState.learnedWords[key]).length;
    });
    const set = (id, val) => { const el = $(id); if (el) el.textContent = val; };
    set('wordsLearned', wordsCount);
    set('phrasesLearned', 0);
    set('grammarLearned', 0);
    set('quizzesDone', appState.quizzesDone);
}

function updateCounts() {
    const level = appState.currentLevel;
    let totalWords = 0;
    Object.values(DATABASE.words[level] || {}).forEach(cat => totalWords += cat.words?.length || 0);
    
    const set = (id, val) => { const el = $(id); if (el) el.textContent = val; };
    set('wordsCount', totalWords + ' كلمة');
    
    let totalPhrases = 0;
    (DATABASE.phrases[level] || []).forEach(p => totalPhrases += p.phrases?.length || 0);
    set('phrasesCount', totalPhrases + ' عبارة');
    set('conversationsCount', (DATABASE.conversations[level]?.length || 0) + ' محادثة');
    set('grammarCount', (DATABASE.grammar[level]?.length || 0) + ' درس');
}

// ==================== Settings ====================
function openSettings() {
    $('modalOverlay').classList.add('show');
    $('settingsModal').classList.add('show');
    $('darkModeToggle').classList.toggle('active', appState.darkMode);
    $('soundToggle').classList.toggle('active', appState.soundEnabled);
    $('notificationsToggle').classList.toggle('active', appState.notificationsEnabled);
    $('dailyGoalDisplay').textContent = appState.dailyGoal + ' XP';
    const times = ['06:00', '09:00', '12:00', '18:00', '21:00'];
    const labels = ['6:00 صباحاً', '9:00 صباحاً', '12:00 ظهراً', '6:00 مساءً', '9:00 مساءً'];
    $('reminderTimeDisplay').textContent = labels[times.indexOf(appState.reminderTime)] || '9:00 صباحاً';
}

function closeModal() {
    $('modalOverlay').classList.remove('show');
    $('settingsModal').classList.remove('show');
}

function toggleDarkMode() {
    appState.darkMode = !appState.darkMode;
    document.body.classList.toggle('dark-mode', appState.darkMode);
    $('darkModeToggle').classList.toggle('active', appState.darkMode);
    saveState();
}

function toggleSound() {
    appState.soundEnabled = !appState.soundEnabled;
    $('soundToggle').classList.toggle('active', appState.soundEnabled);
    saveState();
    showToast(appState.soundEnabled ? '🔊 الصوت مفعّل' : '🔇 الصوت متوقف', 'info');
}

function toggleNotifications() {
    appState.notificationsEnabled = !appState.notificationsEnabled;
    $('notificationsToggle').classList.toggle('active', appState.notificationsEnabled);
    saveState();
    showToast(appState.notificationsEnabled ? '🔔 الإشعارات مفعّلة' : '🔕 الإشعارات متوقفة', 'info');
}

function setReminderTime() {
    const times = ['06:00', '09:00', '12:00', '18:00', '21:00'];
    const labels = ['6:00 صباحاً', '9:00 صباحاً', '12:00 ظهراً', '6:00 مساءً', '9:00 مساءً'];
    const idx = (times.indexOf(appState.reminderTime) + 1) % times.length;
    appState.reminderTime = times[idx];
    $('reminderTimeDisplay').textContent = labels[idx];
    saveState();
    showToast(`⏰ وقت التذكير: ${labels[idx]}`, 'info');
}

function setDailyGoal() {
    const goals = [30, 50, 100, 150, 200];
    appState.dailyGoal = goals[(goals.indexOf(appState.dailyGoal) + 1) % goals.length];
    $('dailyGoalDisplay').textContent = appState.dailyGoal + ' XP';
    $('dailyTarget').textContent = appState.dailyGoal;
    saveState();
    updateUI();
    showToast(`🎯 الهدف: ${appState.dailyGoal} XP`, 'success');
}

function resetProgress() {
    if (confirm('⚠️ هل أنت متأكد؟ سيتم حذف جميع بياناتك!')) {
        localStorage.removeItem(CONFIG.STATE_KEY);
        for (let i = localStorage.length - 1; i >= 0; i--) {
            const key = localStorage.key(i);
            if (key?.startsWith(CONFIG.CACHE_PREFIX)) localStorage.removeItem(key);
        }
        location.reload();
    }
}

// ==================== Utilities ====================
function speak(text, rate = 0.8) {
    if (appState.soundEnabled && 'speechSynthesis' in window) {
        speechSynthesis.cancel();
        const u = new SpeechSynthesisUtterance(text);
        u.lang = 'it-IT';
        u.rate = rate;
        speechSynthesis.speak(u);
    }
}

function showToast(message, type = 'info') {
    const toast = $('toast');
    const msgEl = $('toastMessage');
    if (!toast || !msgEl) return;
    
    clearTimeout(toastTimeout);
    msgEl.textContent = message;
    toast.className = `toast ${type}`;
    const icons = { success: 'fa-check-circle', error: 'fa-times-circle', warning: 'fa-exclamation-triangle', info: 'fa-info-circle' };
    toast.querySelector('i').className = `fas ${icons[type] || icons.info}`;
    toast.classList.add('show');
    toastTimeout = setTimeout(() => toast.classList.remove('show'), 2500);
}

// ==================== Event Listeners ====================
$('modalOverlay')?.addEventListener('click', function(e) {
    if (e.target === this) { closeModal(); closeConfirmDialog(); closeAchievementModal(); }
});

document.addEventListener('keydown', e => {
    if (e.key === 'Enter') {
        const spelling = $('spellingInput');
        const listening = $('listeningInput');
        if (spelling && document.activeElement === spelling) checkSpelling();
        else if (listening && document.activeElement === listening) checkListening();
    }
});

// ==================== Offline Detection ====================
function updateOnlineStatus() {
    const banner = $('offlineBanner');
    if (banner) banner.classList.toggle('show', !navigator.onLine);
}

window.addEventListener('online', () => { updateOnlineStatus(); showToast('🌐 تم استعادة الاتصال', 'success'); });
window.addEventListener('offline', () => { updateOnlineStatus(); showToast('📴 أنت غير متصل', 'warning'); });

// ==================== Session End Tracking ====================
window.addEventListener('beforeunload', endStudySession);
window.addEventListener('visibilitychange', () => {
    if (document.hidden) {
        endStudySession();
    } else {
        initStudyTracking();
    }
});

// ==================== Start App ====================
if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', initApp);
else initApp();
    </script>
</body>
</html> 