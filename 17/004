// ==================== Data Loading ====================
async function loadConfig() {
    if (loadingStatus.config) return APP_CONFIG;
    try {
        const cached = localStorage.getItem(`${CONFIG.CACHE_PREFIX}config_${CONFIG.CACHE_VERSION}`);
        if (cached) {
            const { data, timestamp } = JSON.parse(cached);
            if (Date.now() - timestamp < CONFIG.CACHE_DURATION) {
                APP_CONFIG = { ...APP_CONFIG, ...data };
                loadingStatus.config = true;
                return APP_CONFIG;
            }
        }
        const response = await fetch(`${CONFIG.BASE_URL}config.json`);
        if (!response.ok) throw new Error('Config not found');
        const data = await response.json();
        APP_CONFIG = { ...APP_CONFIG, ...data };
        localStorage.setItem(`${CONFIG.CACHE_PREFIX}config_${CONFIG.CACHE_VERSION}`, JSON.stringify({ data, timestamp: Date.now() }));
        loadingStatus.config = true;
    } catch (e) { console.log('Using default config'); }
    return APP_CONFIG;
}

async function loadDataFile(type, level) {
    const cacheKey = `${CONFIG.CACHE_PREFIX}${type}_${level}_${CONFIG.CACHE_VERSION}`;
    if (loadingStatus[type][level]) return DATABASE[type][level];
    
    try {
        const cached = localStorage.getItem(cacheKey);
        if (cached) {
            const { data, timestamp } = JSON.parse(cached);
            if (Date.now() - timestamp < CONFIG.CACHE_DURATION) {
                DATABASE[type][level] = data;
                loadingStatus[type][level] = true;
                return data;
            }
        }
    } catch (e) {}
    
    try {
        const response = await fetch(`${CONFIG.BASE_URL}${type}/${level}.json`);
        if (!response.ok) throw new Error(`HTTP ${response.status}`);
        const data = await response.json();
        try { localStorage.setItem(cacheKey, JSON.stringify({ data, timestamp: Date.now() })); } 
        catch (e) { clearOldCaches(); }
        DATABASE[type][level] = data;
        loadingStatus[type][level] = true;
        return data;
    } catch (error) {
        DATABASE[type][level] = getFallbackData(type, level);
        loadingStatus[type][level] = true;
        return DATABASE[type][level];
    }
}

async function loadAllLevelsData(type) {
    await Promise.all(['a1', 'a2', 'b1', 'b2'].map(level => loadDataFile(type, level)));
}

async function loadCurrentLevelData() {
    await Promise.all([
        loadDataFile('words', appState.currentLevel),
        loadDataFile('phrases', appState.currentLevel),
        loadDataFile('grammar', appState.currentLevel),
        loadDataFile('conversations', appState.currentLevel)
    ]);
    cachedDictionaryHTML = {};
    requestAnimationFrame(() => { updateUI(); updateCounts(); updateLevelProgressIndicators(); });
}

function clearOldCaches() {
    for (let i = localStorage.length - 1; i >= 0; i--) {
        const key = localStorage.key(i);
        if (key?.startsWith(CONFIG.CACHE_PREFIX) && !key.includes(CONFIG.CACHE_VERSION)) {
            localStorage.removeItem(key);
        }
    }
}

