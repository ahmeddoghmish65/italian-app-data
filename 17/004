    <script>
// ==================== Performance Helpers ====================
const debounce = (fn, delay) => {
    let timeout;
    return (...args) => {
        clearTimeout(timeout);
        timeout = setTimeout(() => fn(...args), delay);
    };
};

const throttle = (fn, limit) => {
    let inThrottle;
    return (...args) => {
        if (!inThrottle) {
            fn(...args);
            inThrottle = true;
            setTimeout(() => inThrottle = false, limit);
        }
    };
};

const $ = id => document.getElementById(id);
const $$ = sel => document.querySelectorAll(sel);

// ==================== Configuration ====================
const CONFIG = {
    BASE_URL: 'https://raw.githubusercontent.com/ahmeddoghmish65/Itali-app-data/main/data/',
    CACHE_PREFIX: 'sahlitali_cache_',
    CACHE_VERSION: 'v6',
    STATE_KEY: 'sahlitali_state_v14',
    CACHE_DURATION: 24 * 60 * 60 * 1000
};

// ==================== SRS Configuration ====================
const SRS_CONFIG = {
    again: { interval: 0.0007, ease: -0.2, minInterval: 0.0007 },  // ~1 دقيقة
    hard: { interval: 0.01, ease: -0.15, minInterval: 0.01 },      // ~15 دقيقة
    good: { interval: 1, ease: 0, minInterval: 1 },                 // 1 يوم
    easy: { interval: 4, ease: 0.15, minInterval: 4 }               // 4 أيام
};

// ==================== Database ====================
let DATABASE = {
    words: { a1: {}, a2: {}, b1: {}, b2: {} },
    grammar: { a1: [], a2: [], b1: [], b2: [] },
    phrases: { a1: [], a2: [], b1: [], b2: [] },
    conversations: { a1: [], a2: [], b1: [], b2: [] }
};

let APP_CONFIG = {
    app: { name: 'سهل إيطالي', version: '2.0.0' },
    social: { facebook: '', instagram: '', tiktok: '' },
    about: { title: 'من نحن', content: '' },
    contact: { title: 'اتصل بنا', email: '', content: '' },
